<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div class="sheet.content">
        <table>
            <tr>
                <th>{{localize "kkrpg.weapon.attackWith"}}</th>
                <th>{{localize "kkrpg.weapon.damage"}}</th>
                <th>{{localize "kkrpg.weapon.lootBonus"}}</th>
            </tr>
            <tr>
                <td>
                    <select name="data.attackWith">
                        {{#select data.attackWith}}
                        {{#each config.attackTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="data.damage" type="text" value="{{data.damage}}" data_dtype="Number" />
                </td>
                <td>
                    <input name="data.lootBonus" type="text" value="{{data.lootBonus}}" data_dtype="Number" />
                </td>
            </tr>
        </table>
        <textarea name="data.description">{{data.description}}</textarea>
    </div>
</form>
